<?xml version="1.0" encoding="ISO-8859-1"?>
<beanformatter pageSize='50'>

	<!-- Ponemos 2 veces la propiedad Fraccion, 
		 una para mostrarla solo en html (media='html')
		 y la otra para la exportacion (media= 'xml excel csv pdf') -->	

	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='LIQUIDACION' 
				 titleKey='REC_DAT_FRACC:LIQUIDACION' 
				 fieldType='LIST'
				 columnClass='width30percent'
				 headerClass='sortable'
				 sortable='true'/>
				 
	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='FRACCION' 
				 titleKey='REC_DAT_FRACC:FRACCION' 
				 fieldType='LINK'
				 columnClass='width20percent'
				 headerClass='sortable'
				 sortable='true'
				 media='html'/>
				 
	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='FRACCION' 
				 titleKey='REC_DAT_FRACC:FRACCION' 
				 fieldType='LIST'
				 columnClass='width20percent'
				 headerClass='headerDisplay'
				 media='csv excel xml pdf'/>

	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='CUOTA' 
				 titleKey='REC_DAT_FRACC:CUOTA' 
				 fieldType='LIST'
				 columnClass='width30percent'
				 headerClass='sortable'
				 sortable='true'/>
				 
    <propertyfmt type="BeanPropertySimpleFmt" 
				 property='FECHA_FIN_PAGO' 
				 titleKey='REC_DAT_FRACC:FECHA_FIN_PAGO' 
				 fieldType='LIST'
				 columnClass='width20percent'
				 headerClass='sortable'
				 sortable='true'/>
				 
</beanformatter>

<?xml version="1.0" encoding="ISO-8859-1"?>
<beanformatter>

	<!-- Ponemos 2 veces la propiedad Asunto, 
		 una para mostrarla solo en html (media='html')
		 y la otra para la exportacion (media= 'xml excel csv pdf') -->
	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='ORDEN' 
				 titleKey='SECR_RUEGOS_PREGUNTAS:ORDEN' 
				 fieldType='LIST' 
				 columnClass='width10percent'
				 headerClass='sortable'
				 sortable='true'/>

	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='ASUNTO' 
				 titleKey='SECR_RUEGOS_PREGUNTAS:ASUNTO' 
				 fieldType='LINK'
				 columnClass='width90percent'
				 headerClass='sortable'
				 sortable='true'
				 media='html'/>
				 
	<propertyfmt type="BeanPropertySimpleFmt" 
				 property='ASUNTO' 
				 titleKey='SECR_RUEGOS_PREGUNTAS:ASUNTO' 
				 fieldType='LIST'
				 columnClass='width90percent'
				 headerClass='headerDisplay'
				 media='csv excel xml pdf'/>
				 
</beanformatter>
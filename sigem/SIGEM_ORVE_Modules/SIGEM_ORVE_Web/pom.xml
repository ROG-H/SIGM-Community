<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>es.ieci.tecdoc.sigem</groupId>
		<artifactId>sigem_main_web</artifactId>
		<version>3.0.1-M2</version>
	</parent>
		
	<artifactId>SIGEM_ORVE_Web</artifactId>
	<name>SIGEM_ORVE_Web</name>	
	<packaging>war</packaging>
	
	<repositories>
		<repository>
			<id>repo_arch</id>
			<name>repo_arch</name>
			<url>file:${project.basedir}/../../lib</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>es.dipucr.orve</groupId>
			<artifactId>orve</artifactId>
			<version>1.0</version>
		</dependency>
		
		<dependency>
			<groupId>com.sun.media</groupId>
			<artifactId>jai-codec</artifactId>
			<version>1.1.3</version>
		</dependency>
		
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_utilidadesAdministracion</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<groupId>es.ieci.tecdoc.sigem</groupId>
					<artifactId>sigem_administracionSesionesAdmWsClient</artifactId>
				</exclusion>
				<exclusion>
					<groupId>es.ieci.tecdoc.sigem</groupId>
					<artifactId>sigem_administracionSesionesBackOfficeWsClient</artifactId>
				</exclusion>
				<exclusion>
					<groupId>es.ieci.tecdoc.sigem</groupId>
					<artifactId>sigem_entidades</artifactId>
				</exclusion>
				<exclusion>
					<groupId>es.ieci.tecdoc.sigem</groupId>
					<artifactId>sigem_estructuraOrganizativa</artifactId>
				</exclusion>
				<exclusion>
					<groupId>es.ieci.tecdoc.sigem</groupId>
					<artifactId>sigem_estructuraOrganizativaCore</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>es.ieci.tecdoc.iflow</groupId>
			<artifactId>ispac-web</artifactId>
			<version>${ispac.version}</version>
			<exclusions>
				<exclusion>
					<groupId>displaytag</groupId>
					<artifactId>displaytag</artifactId>
				</exclusion>
				<exclusion>
					<groupId>struts</groupId>
					<artifactId>struts</artifactId>
				</exclusion>
				<exclusion>
					<groupId>struts-menu</groupId>
					<artifactId>struts-menu</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>
	
	<build>
		<finalName>SIGEM_ORVE_Web</finalName>
		<filters>
			<filter>${filter.generic.system}</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dependency-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-web-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>es.ieci.tecdoc.iflow</groupId>
							<artifactId>ispac-publicador-webapp</artifactId>
							<version>${ispac.version}</version>
							<type>jar</type>
						</artifactItem>
					</artifactItems>
					<outputDirectory>${project.build.directory}/${project.build.finalName}</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.codehaus.mojo
										</groupId>
										<artifactId>
											dependency-maven-plugin
										</artifactId>
										<versionRange>
											[1.0,)
										</versionRange>
										<goals>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<!-- Perfiles de construccion en funcion del S.O. -->
		<profile>
			<id>unix</id>
			<activation>
				<property>
					<name>unix</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../../SIGEM_Config/src/main/filters/system/unix.properties</filter.generic.system>
			</properties>
		</profile>
		<profile>
			<id>win</id>
			<activation>
				<property>
					<name>win</name>
				</property>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../../SIGEM_Config/src/main/filters/system/windows.properties</filter.generic.system>
			</properties>
		</profile>
	</profiles>
</project>